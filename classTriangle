public class Triangle implements Shape {
    // Стороны треугольника
    private double sideA;
    private double sideB;
    private double sideC;

    // Цвета заливки и границ
    private String fillColor;
    private String blueColor;

    
    public Triangle(double sideA, double sideB, double sideC, String fillColor, String borderColor) {
        this.sideA = sideA;
        this.sideB = sideB;
        this.sideC = sideC;
        this.fillColor = fillColor;
        this.blueColor = blueColor;
    }

    @Override
    public double calculateArea() {
        double s = calculatePerimeter() / 2;  // Полупериметр
        return Math.sqrt(s * (s - sideA) * (s - sideB) * (s - sideC)); // Формула Герона
    }

    @Override
    public double calculatePerimeter() {
        return sideA + sideB + sideC;
    }

    @Override
    public String getFillColor() {
        return fillColor;
    }

    @Override
    public String getblueColor() {
        return blueColor;
    }

    public static void main(String[] args) {
        Triangle triangle = new Triangle(3.0, 4.0, 5.0, "Blue", "Black");
        
        System.out.println("Площадь треугольника: " + triangle.calculateArea());
        System.out.println("Периметр треугольника: " + triangle.calculatePerimeter());
        System.out.println("Цвет заливки: " + triangle.getFillColor());
        System.out.println("Цвет границы: " + triangle.getBorderColor());
    }
}
