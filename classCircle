// Интерфейс Shape
interface Shape {
    double calculateArea();
    double calculatePerimeter();

    
    default void printPerimeter() {
        System.out.println("Периметр: " + calculatePerimeter());
    }

    String getFillColor();
    String getBorderColor();
}

// Класс Circle
class Circle implements Shape {
    private double radius;
    private String fillColor;
    private String borderColor;

    public Circle(double radius, String fillColor, String borderColor) {
        this.radius = radius;
        this.fillColor = fillColor;
        this.borderColor = borderColor;
    }

    @Override
    public double calculateArea() {
        return Math.PI * radius * radius;
    }

    @Override
    public double calculatePerimeter() {
        return 2 * Math.PI * radius;
    }

    @Override
    public String getFillColor() {
        return fillColor;
    }

    @Override
    public String getBorderColor() {
        return borderColor;
    }
}
public class Main {
    public static void main(String[] args) {
        Circle circle = new Circle(5.0, "Red", "Black");
        System.out.println("Площадь: " + circle.calculateArea());
        circle.printPerimeter();  
        System.out.println("Цвет заливки: " + circle.getFillColor());
        System.out.println("Цвет границы: " + circle.getBorderColor());
    }
}
