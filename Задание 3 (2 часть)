private class Attraction {
        private String name;
        private String workingTime;
        private double price;

        public Attraction(String name, String workingTime, double price) {
            this.name = name;
            this.workingTime = workingTime;
            this.price = price;
        }

        public String toString() {
            return name + " - Время работы: " + workingTime + ", Цена: " + price + " рублей";
        }
    }

    public static void main(String[] args) {
        Park park = new Park();
        park.addAttraction("Американские горки", "10:00 - 20:00", 500);
        park.addAttraction("Колесо обозрения", "10:00 - 22:00", 300);
        park.showAttractions();
    }
}
